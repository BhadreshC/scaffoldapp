<font size="18"> <p id="notice"><%= notice %></p> </font> 

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author_name</th>
      <th>language</th>
      <th>Price</th>
      <th>Publishedyear</th>
      <th>Isbn</th>
      <th>slug</th>
      <th colspan="3">Operation</th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author.name %></td>
        <td><%= book.language %></td>
        <td><%= book.price %></td>  
        <td><%= book.publishedyear %></td>
        <td><%= book.ISBN %></td>
        <td><%= book.slug%></td>  
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h2>
<%= link_to 'New Book', new_book_path %> ||
<%= link_to 'LIST OF AUTHORS ', authors_path %>
</h2>

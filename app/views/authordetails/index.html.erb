<p id="notice"><%= notice %></p>

<h1>Authordetails</h1>

<table>
  <thead>
    <tr>
      <th>Author Name</th>
      <th>Bio</th>
      <th>Email</th>
      <th>Mobile no</th>
       <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authordetails.each do |authordetail| %>
      <tr>
        <td><%= authordetail.author.name %></td>
        <td><%= authordetail.bio %></td>
        <td><%= authordetail.email %></td>
        <td><%= authordetail.mobile_No %></td>
        <td><%= link_to 'Show', authordetail %></td>
        <td><%= link_to 'Edit', edit_authordetail_path(authordetail) %></td>
        <td><%= link_to 'Destroy', authordetail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= form_with(model: author, local: true) do |form| %> 

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <!------------ nested form  SECOUDND FORM, SAME AS authordetails_form.html ----------------- -->
  <%= form.fields_for :authordetail do |ad| %>

   <h2>Personal Details</h2>

    <div class="field">
      <%= ad.label :bio %>
      <%= ad.text_area :bio %>
    </div>

    <div class="field">
      <%= ad.label :email %>
      <%= ad.text_field :email %>
    </div>

    <div class="field">
      <%= ad.label :mobile_No %>
      <%= ad.text_field :mobile_No %>
    </div>

  <% end %>

<!------------------TRY OVER --------------------------------------------------------------------->
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<p id="notice"><%= notice %></p>

<h1>Bookstores</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>EmailAddress</th>
      <th>Price</th>
      <th>Publishedyear</th>
      <th>Isbn</th>
      <th>slug</th>
      <th colspan="3">Operation</th>
    </tr>
  </thead>

  <tbody>
    <% @bookstores.each do |bookstore| %>
      <tr>
        <td><%= bookstore.title %></td>
        <td><%= bookstore.author %></td>
        <td><%= bookstore.EmailAddress %></td>
        <td><%= bookstore.price %></td>
        <td><%= bookstore.publishedyear %></td>
        <td><%= bookstore.ISBN %></td>
        <td><%= bookstore.slug%></td>  
        <td><%= link_to 'Show', bookstore %></td>
        <td><%= link_to 'Edit', edit_bookstore_path(bookstore) %></td>
        <td><%= link_to 'Destroy', bookstore, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bookstore', new_bookstore_path %>
